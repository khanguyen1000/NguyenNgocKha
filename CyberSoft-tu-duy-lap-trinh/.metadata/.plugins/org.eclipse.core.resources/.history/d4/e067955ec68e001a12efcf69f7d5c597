package QLSinhVien;

import java.util.Scanner;

public class SinhVien {
	//attribute
	private String ten ;
	private int maSV;
	private double diemToan;
	private double diemLy;
	private double diemHoa;
	//constructors
	public SinhVien() {
		this.ten="";
		this.maSV=0;
		this.diemToan=0;
		this.diemLy=0;
		this.diemHoa=0;
	}
	public SinhVien(String ten, int maSV,double diemToan,double diemHoa,double diemLy) {
		this.ten=ten;
		this.maSV=maSV;
		this.diemToan=diemToan;
		this.diemLy=diemLy;
		this.diemHoa=diemHoa;
	}
	//methods
	public void nhap() {
		Scanner sn=new Scanner(System.in);
		System.out.println("nhập họ tên : ");
		this.ten=sn.nextLine();
		System.out.println("nhập mã Sinh Viên :");
		this.maSV=sn.nextInt();
		System.out.println("nhập điểm Toán :");
		this.diemToan=sn.nextDouble();
		System.out.println("nhập điểm Lý :");
		this.diemLy=sn.nextDouble();
		System.out.println("nhập điểm Hoá :");
		this.diemHoa=sn.nextDouble();
	}
	public void xuat() {
	}
	private double diemtb() {
		double dtb=(this.diemToan+this.diemLy+this.diemHoa)/3;
	
		return dtb;
	}
	public String xepLoai() {
		String loai=null;
		double dtb=diemtb();
		if(dtb<5) {
			loai="yếu";
		}else if (dtb>=5&& dtb<7) {
			loai="tb";
		
		}else if (dtb>=7 && dtb<8) {
			loai= "khá";
		}else if (dtb>=8) {
			loai="giỏi";
		}
		return loai;
	}
}
