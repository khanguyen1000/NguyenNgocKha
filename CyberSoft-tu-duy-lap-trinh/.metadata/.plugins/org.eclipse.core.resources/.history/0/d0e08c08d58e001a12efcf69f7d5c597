		Scanner sn = new Scanner(System.in);
		DanhSachSV ListSV = new DanhSachSV();
		// nhập dữ liệu
//		System.out.println("nhập n sinh viên : ");
//		int n = Integer.parseInt(sn.nextLine());
		//
		// xử lý

