		System.out.println("-----------------------------------------");
		System.out.println(" 1_Nhập ds Sinh viên ");
		System.out.println("-----------------------------------------");
		System.out.println(" 2_danh sách  sinh viên yếu ");

		System.out.println("-----------------------------------------");
		System.out.println("3_Sinh viên cao nhất ");
		
		System.out.println("-----------------------------------------");
		System.out.println("4_tìm sv theo tên");
		
		System.out.println("-----------------------------------------");
		System.out.println("5_tìm sv theo Mã:");
